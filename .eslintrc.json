{
    "extends": [
        "eslint:recommended",
        "@typescript-eslint/recommended",
        "prettier"
    ],
    "parser": "@typescript-eslint/parser",
    "plugins": [
        "@typescript-eslint",
        "import"
    ],
    "parserOptions": {
        "ecmaVersion": 2022,
        "sourceType": "module",
        "project": true
    },
    "rules": {
        "@typescript-eslint/no-explicit-any": "error",
        "@typescript-eslint/explicit-function-return-type": "warn",
        "@typescript-eslint/no-unused-vars": "error",
        "@typescript-eslint/prefer-const": "error",
        "@typescript-eslint/no-var-requires": "error",
        "no-console": "warn",
        "prefer-const": "error",
        "no-var": "error",
        "no-duplicate-imports": "error",
        "import/order": [
            "error",
            {
                "groups": [
                    "builtin",
                    "external",
                    "internal",
                    "parent",
                    "sibling",
                    "index"
                ],
                "newlines-between": "always",
                "alphabetize": {
                    "order": "asc"
                }
            }
        ]
    },
    "env": {
        "node": true,
        "es2022": true
    },
    "ignorePatterns": [
        "node_modules/",
        "dist/",
        "build/",
        "*.js"
    ]
}
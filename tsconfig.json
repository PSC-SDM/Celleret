{
    "compilerOptions": {
        "target": "ES2022",
        "lib": [
            "ES2022"
        ],
        "module": "ESNext",
        "moduleResolution": "bundler",
        "allowImportingTsExtensions": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "react-jsx",
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "declaration": true,
        "declarationMap": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "baseUrl": ".",
        "paths": {
            "@domain/*": [
                "./src/Domain/*"
            ],
            "@backend/*": [
                "./src/Backend/*"
            ],
            "@frontend/*": [
                "./src/Frontend/src/*"
            ]
        }
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "build",
        "**/*.test.ts",
        "**/*.test.tsx"
    ],
    "references": [
        {
            "path": "./src/Domain"
        },
        {
            "path": "./src/Backend"
        },
        {
            "path": "./src/Frontend"
        }
    ]
}